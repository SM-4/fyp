@model IEnumerable<fyp.Models.tblOrder>

@{
    ViewBag.Title = "NewOrders";
}
@Html.Raw(TempData["msg"])
<h2>Sale Report</h2>
<form action="/Reports/SaleReport" method="post">
    <table class="table">
        <tr>
            <td>Date From:</td>
            <td><input type="datetime-local" value="@ViewBag.DateFrom" name="DateFrom" class="form-control" /></td>
            <td>  Date To:</td>
            <td><input type="datetime-local" value="@ViewBag.DateTo" name="DateTo" class="form-control" /></td>
            </tr>
        <tr>
            <td>Category:</td>
            <td>
                @Html.DropDownList("CATEGORY", null, "---Select Category---", htmlAttributes: new { @class = "form-control" })
            </td>
            <td>Sub Category:</td>
            <td>
                @Html.DropDownList("SubCATEGORY", null, "---Select SubCategory---", htmlAttributes: new { @class = "form-control" })
            </td>
            <td>Pet:</td>
            <td>
                @Html.DropDownList("PET", null, "---Select Pet---", htmlAttributes: new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td colspan="6"><input type="submit" class="btn btn-success btn-block" /></td>
        </tr>
    </table>
</form>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.tblCustomer.Customer_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Order_Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Order_Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Order_Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Payment_Mode)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.tblCustomer.Customer_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Order_Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Order_Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Order_Status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Payment_Mode)
        </td>
        <td><a href="@Url.Action("invoice", "AdminSide", new {id=item.Order_ID})" class="btn btn-info">Invoice</a></td>
    </tr>
}

</table>
