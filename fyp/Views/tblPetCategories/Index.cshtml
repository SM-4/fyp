@model IEnumerable<fyp.Models.tblPetCategory>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
<a href="@Url.Action("Create")" class=" btn btn-info">Create New</a>
</p>
<table class="table">
    <tr>
        <th>
            Category_Name
        </th>
        <th>
            Category_Image
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.Category_Name
        </td>
        <td>
            <img src="@Url.Content(item.Category_Image)" width="100" height="100" />
        </td>
        <td>
            <a class="btn btn-primary glyphicon glyphicon-edit" href="@Url.Action("edit","tblPetCategories", new {id=item.Category_ID})"></a>
            <a class="btn btn-success glyphicon glyphicon-book" href="@Url.Action("details","tblPetCategories", new {id=item.Category_ID})"></a>
            <a class="btn btn-danger glyphicon glyphicon-trash" href="@Url.Action("delete","tblPetCategories", new {id=item.Category_ID})"></a>
        </td>
    </tr>
}

</table>
