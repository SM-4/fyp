@using fyp.Utills
@using fyp.Models
@{
    List<tblPet> list = new List<tblPet>();
    if (Session["cart"] != null)
    {
        list = (List<tblPet>)Session["cart"];
    }
    //List<tblCustomer> checking = new List<tblCustomer>()
    //if (Session["check"] != null)
    //{
    //    checking = (List<tblCustomer>)Session["check"];
    //}

    Model1 db = new Model1();
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Quest4Pets </title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="Free HTML Templates" name="keywords">
    <meta content="Free HTML Templates" name="description">

    @*<script src="~/Scripts/jquery-3.4.1.js"></script>
        <link href="~/Content/bootstrap.css" rel="stylesheet" />
        <script src="~/Scripts/bootstrap.js"></script>*@

    <!-- Favicon -->
    <link href="~/content/customer/img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans&family=Nunito:wght@600;700;800&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">

    <!-- Flaticon Font -->
    <link href="~/content/customer/lib/flaticon/font/flaticon.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/content/customer/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/content/customer/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/content/customer/css/style.css" rel="stylesheet">
</head>

<body>
    <!-- Topbar Start -->
    <div class="container-fluid">
        <div class="row bg-secondary py-2 px-lg-5">

        </div>
        <div class="row py-3 px-lg-5">
            <div class="col-lg-4">
                <a href="" class="navbar-brand d-none d-lg-block">
                    <h1 class="m-0 display-5 text-capitalize">
                        <img src="~/Content/customer/img/Quest.png" style="height:80px; width:80px" />
                        <span class="text-primary">Quest</span> 4 Pets
                    </h1>
                </a>
            </div>
            <div class="col-lg-8 text-center text-lg-right">
                <div class="d-inline-flex align-items-center">
                    <div class="d-inline-flex flex-column text-center pr-3 border-right">
                        @if (CurrentUser.CurrentCustomer != null)
                        {
                            <div class="fa fa-user"></div>
                            <h6>@CurrentUser.CurrentCustomer.Customer_Name </h6>
                        }
                    </div>
                    @*<div class="d-inline-flex flex-column text-center px-3 border-right">
                            <h6>email us</h6>
                            <p class="m-0">info@example.com</p>
                        </div>
                        <div class="d-inline-flex flex-column text-center pl-3">
                            <h6>call us</h6>
                            <p class="m-0">+012 345 6789</p>
                        </div>*@
                </div>
            </div>
        </div>
    </div>
    <!-- Topbar End -->
    <!-- Navbar Start -->
    <div class="container-fluid p-0">
        <nav class="navbar navbar-expand-lg bg-dark navbar-dark py-3 py-lg-0 px-lg-5">
            <a href="" class="navbar-brand d-block d-lg-none">
                <h1 class="m-0 display-5 text-capitalize font-italic text-white"><span class="text-primary">Safety</span>First</h1>
            </a>
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-between px-3" id="navbarCollapse">
                <div class="navbar-nav mr-auto py-0">
                    <a href="@Url.Action("Index","Home")" class="nav-item nav-link active">Home</a>
                    @foreach (var item in db.tblPetCategories)
                    {
                        <a href="@Url.Action("SubCategory", "Home", new {id=item.Category_ID})" class="nav-item nav-link">@item.Category_Name</a>

                    }
                    <a href="@Url.Action("About","Home")" class="nav-item nav-link">About</a>
                    <a href="@Url.Action("Training","Home")" class="nav-item nav-link">Pet Training</a>
                    <a href="@Url.Action("Shelter","Home")" class="nav-item nav-link">Shelter</a>
                    <a href="@Url.Action("Vet","Home")" class="nav-item nav-link">Veterinarian</a>
                    <a href="@Url.Action("Feedback","Home")" class="nav-item nav-link">Feedback</a>
                    <a href="/cart/Displaycart" class="nav-item nav-link fa fa-shopping-cart">@list.Count() </a>
                </div>
            </div>

        </nav>
    </div>
    <!-- Navbar End -->

    @RenderBody()


    <!-- Footer Start -->
    <div class="container-fluid bg-dark text-white mt-5 py-5 px-sm-3 px-md-5">
        <div class="row pt-5">
            <div class="col-lg-4 col-md-12 mb-5">
                <h1 class="mb-3 display-5 text-capitalize text-white">
                    <span class="text-primary">Quest</span> 4 Pets
                </h1>
                <p class="m-0">Quest 4 Pets bring out several kinds of pets and their accessories online, keeping your budget in mind.</p>
            </div>
            <div class="col-lg-8 col-md-12">
                <div class="row">
                    <div class="col-md-8 mb-5">
                        <h5 class="text-primary mb-4">Get In Touch</h5>
                        <p><i class="fa fa-envelope mr-2"></i>quest4pets@gmail.com</p>
                        <div class="d-flex justify-content-start mt-4">
                            <a class="btn btn-outline-light rounded-circle text-center mr-2 px-0" style="width: 36px; height: 36px;" href="#"><i class="fab fa-facebook-f"></i></a>
                            <a class="btn btn-outline-light rounded-circle text-center mr-2 px-0" style="width: 36px; height: 36px;" href="#"><i class="fab fa-linkedin-in"></i></a>
                            <a class="btn btn-outline-light rounded-circle text-center mr-2 px-0" style="width: 36px; height: 36px;" href="#"><i class="fab fa-instagram"></i></a>
                        </div>
                    </div>
                    <div class="col-md-4 mb-5">
                        <h5 class="text-primary mb-4">Popular Links</h5>
                        <div class="d-flex flex-column justify-content-start">
                            <a class="text-white mb-2" href="@Url.Action("Index","Home")"><i class="fa fa-angle-right mr-2"></i>Home</a>
                            <a class="text-white" href="@Url.Action("About","Home")"><i class="fa fa-angle-right mr-2"></i>About</a>

                            @foreach (var item in db.tblPetCategories)
                            {
                                <a class="text-white mb-2" href="@Url.Action("SubCategory", "Home", new {id=item.Category_ID})"><i class="fa fa-angle-right mr-2"></i>@item.Category_Name</a>
                            }
                            <a class="text-white mb-2" href="@Url.Action("Feedback","Home")"><i class="fa fa-angle-right mr-2"></i>Feedback</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer End -->
    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary back-to-top"><i class="fa fa-angle-double-up"></i></a>


    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <script src="~/content/customer/lib/easing/easing.min.js"></script>
    <script src="~/content/customer/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/content/customer/lib/tempusdominus/js/moment.min.js"></script>
    <script src="~/content/customer/lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="~/content/customer/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

    <!-- Contact Javascript File -->
    <script src="mail/jqBootstrapValidation.min.js"></script>
    <script src="mail/contact.js"></script>

    <!-- Template Javascript -->
    <script src="~/content/customer/js/main.js"></script>
</body>

</html>