@model fyp.Models.tblOrder
    @{ 
        decimal Total = 0;
    }

    <!--main content start-->
        <div class="col-lg-12 mt">
          <div class="row content-panel">
            <div class="col-lg-10 col-lg-offset-1">
              <div class="invoice-body">
                <div class="pull-left">
                  <h1>DASHIO</h1>
                  <address>
                <strong>Admin Theme, Inc.</strong><br>
                795 Asome Ave, Suite 850<br>
                New York, 94447<br>
                <abbr title="Phone">P:</abbr> (123) 456-7890
              </address>
                </div>
                <!-- /pull-left -->
                <div class="pull-right">
                  <h2>invoice</h2>
                </div>
                <!-- /pull-right -->
                <div class="clearfix"></div>
                <br>
                <br>
                <br>
                <div class="row">
                  <div class="col-md-9">
                    <h4>@Model.tblCustomer.Customer_Name</h4>
                    <address>
                  <strong>@Model.tblCustomer.Customer_Address</strong><br>
                  <abbr title="Phone">P:</abbr> @Model.tblCustomer.Customer_Contact
                </address>
                  </div>
                  <!-- /col-md-9 -->
                  <div class="col-md-3">
                    <br>
                    <div>
                      <div class="pull-left"> INVOICE NO : </div>
                      <div class="pull-right"> @Model.Order_ID </div>
                      <div class="clearfix"></div>
                    </div>
                    <div>
                      <!-- /col-md-3 -->
                      <div class="pull-left"> INVOICE DATE : </div>
                      <div class="pull-right"> @Model.Order_Date.ToLongDateString() </div>
                      <div class="clearfix"></div>
                    </div>
                    <!-- /row -->
                    <br>
                    <div class="well well-small red">
                      <div class="pull-left"> Total Due : </div>
                      <div class="pull-right"> @Total </div>
                      <div class="clearfix"></div>
                    </div>
                  </div>
                  <!-- /invoice-body -->
                </div>
                <!-- /col-lg-10 -->
                <table class="table">
                  <thead>
                    <tr>
                      <th style="width:60px" class="text-center">QTY</th>
                      <th class="text-left">DESCRIPTION</th>
                      <th style="width:140px" class="text-right">UNIT PRICE</th>
                      <th style="width:90px" class="text-right">TOTAL</th>
                    </tr>
                  </thead>
                  <tbody>
                      @foreach (var item in Model.tblOrderDetails)
                      {
                          Total+=(item.SalePricePet*item.Order_PetQuantity);

                              <tr>
                                  <td class="text-center">@item.Order_PetQuantity</td>
                                  <td>@item.tblPet.Pets_Name</td>
                                  <td class="text-right">@item.SalePricePet</td>
                                  <td class="text-right">@(item.SalePricePet*item.Order_PetQuantity)</td>
                              </tr>
                      }
                      <tr>
                          <td colspan="2" rowspan="4">
                              <h4>Terms and Conditions</h4>
                              <p>Thank you for your business. We do expect payment within 21 days, so please process this invoice within that time. There will be a 1.5% interest charge per month on late invoices.</p>
                          <td class="text-right"><strong>Subtotal</strong></td>
                          <td class="text-right">@Total</td>
                      </tr>
                      <tr>
                          <td class="text-right no-border"><strong>Shipping</strong></td>
                          <td class="text-right">200</td>
                      </tr>
                      <tr>
                          <td class="text-right no-border"><strong>VAT Included in Total</strong></td>
                          <td class="text-right">$0.00</td>
                      </tr>
                      <tr>
                          <td class="text-right no-border">
                              <div class="well well-small red"><strong>Total</strong></div>
                          </td>
                          <td class="text-right"><strong>@(Total+200)</strong></td>
                      </tr>
                  </tbody>
                </table>
                <br>
                <br>
              </div>
              <!--/col-lg-12 mt -->
                </div>
              </div>
            </div>
    <!-- /MAIN CONTENT -->
    <!--main content end-->
   