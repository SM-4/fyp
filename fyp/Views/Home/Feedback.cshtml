@using fyp.Models
@{
    Layout = "~/views/shared/Customer_Layout.cshtml";
    Model1 db = new Model1();
}

@*<h2 class="text-center">Feedback</h2>*@

 <br />
 <div style="padding: 30px; background: #f6f6f6;">
     <div class="mb-5">
         <h4 class="mb-4 text-center">Reviews <small>(@db.tblFeedbacks.Count())</small> </h4>
         @foreach (var item in db.tblFeedbacks)
         {

             <div class="media mb-4">
                 <div class="img-fluid mr-3 mt-1 fa fa-user" ></div> 

                 <div class="media-body">
                     <p><strong>@item.tblCustomer.Customer_Name </strong><small><i>@item.Feedback_Date</i></small></p>
                     <h6>@item.Feedback_Description</h6>
                 </div>
             </div>
             <hr />
         }
     </div>
     <!--take feedback from customer-->
     @using (Html.BeginForm())
     {
         <h3 class="mb-4">Leave a comment</h3>
         <form action="/Home/Feedback" method="post">
             <div class="form-group">
                 <input name="Pets_FID" hidden value="@db.tblFeedbacks" class="form-control">
             </div>

             <div class="form-group">
                 <label for="message">Review *</label>
                 <div class="col-md-10">
                     <textarea placeholder="Review" name="Feedback_Description" id="message" cols="30" rows="2" class="form-control"></textarea>
                 </div>
             </div>
             <button type="submit" class="btn btn-primary">Submit</button>
         </form>
     }
 </div>
