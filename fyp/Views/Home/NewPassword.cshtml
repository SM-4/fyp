@{
    Layout = "~/Views/Shared/Customer_Layout.cshtml";
}
@Html.Raw(ViewBag.msg)

<!-- Start Cart  -->
<div class="cart-box-main">
    <div class="container">
        <div class="row new-account-login">
            <div class="col-sm-6 col-lg-6 mb-3">
                <div class="title-left">
                    <h3>Set New Password</h3>
                </div>
                <h5><a href="#formLogin">Click here to Login</a></h5>
                <form action="\home\NewPassword" method="post" class="mt-3 collapse review-form-box show" id="formLogin">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="InputEmail" class="mb-0">Enter new password</label>
                            <input required type="text" class="form-control" name="password" id="InputEmail" placeholder="Enter New Password">
                        </div>
                    </div>
                    <button type="submit" class="btn hvr-hover btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>

