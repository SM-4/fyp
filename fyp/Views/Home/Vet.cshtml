
@using fyp.Models
@{
    Layout = "~/Views/Shared/Customer_Layout.cshtml";
    Model1 db = new Model1();
}
<!-- Detail Start -->
<div class="container py-5">
    <div class="row pt-5">
        <div class="col-lg-12">
            <div class="d-flex flex-column text-left mb-4">
                <h1 class="mb-3">Veterinarian ( Pet Doctor )</h1>

            </div>
            <div class="row pb-3">
                @foreach (var item in db.tblVets)
                {
                    <div class="col-lg-5 mb-4">
                        <div class="card border-0">
                            <div class="card-header position-relative border-0 p-0 mb-4">
                                <img class="card-img-top" src="~/content/customer/img/Vet.jpg" style="width:100%; height:200px" alt="">
                                <div class="position-absolute d-flex flex-column align-items-center justify-content-center w-100 h-100" style="top: 0; left: 0; z-index: 1; background: rgba(0, 0, 0, .5);">
                                    <h3 class="text-primary mb-3">Veterinarian</h3>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="col-lg-7 mt-5 mt-lg-0">
                        <br />
                        <div>
                            <h3 class="mb-4">@item.Veterinarian_Name</h3>
                        </div>
                        <p>@item.Veterinarian_Address</p>
                        <div class="mb-5">
                            <div class="d-flex flex-wrap m-n1">
                                <a href="https://www.facebook.com/people/DrTariqs-PetVet-Veterinary-Hospital/100046139241148/" class="btn btn-primary m-1 fab fa-facebook"></a>
                                <div><a href="" class="btn btn-primary m-1 fab fa-whatsapp"></a>@item.Veterinarian_Contact</div>

                            </div>
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
</div>