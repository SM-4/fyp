@{
Layout="~/Views/Shared/Customer_Layout.cshtml";
    }
@Html.Raw(ViewBag.msg)

    <!-- Start Cart  -->
    <div class="cart-box-main">
        <div class="container">
            <div class="row new-account-login">
                <div class="col-sm-6 col-lg-6 mb-3">
                    <div class="title-left">
                        <h3>Account Login</h3>
                    </div>
                    <form action="\home\CustomerLogin" method="post" class="mt-3 collapse review-form-box show" id="formLogin">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="InputEmail" class="mb-0">Email Address</label>
                                <input required type="email" class="form-control" name="Customer_Email" id="InputEmail" placeholder="Enter Email">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="InputPassword" class="mb-0">Password</label>
                                <input required type="password" class="form-control" name="Customer_Password" id="InputPassword" placeholder="Password">
                            </div>
                        </div>
                        <button type="submit" class="btn hvr-hover btn-primary">Login</button>
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">Forget Password</button>
                    </form>
                </div>
                <div class="col-sm-6 col-lg-6 mb-3">
                    <div class="title-left">
                        <h3>Create New Account</h3>
                    </div>
                    <form action="/home/CustomerLogin" method="post" class="mt-3 collapse review-form-box show" id="formRegister">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="InputName" class="mb-0">First Name</label>
                                <input required type="text" class="form-control" name="Customer_Name" id="InputName" placeholder="First Name"> </div>
                            <div class="form-group col-md-6">
                                <label for="Phone" class="mb-0">Phone No</label>
                                <input required type="text" class="form-control" name="Customer_Contact" id="Phone" placeholder="Phone"> </div>
                            <div class="form-group col-md-12">
                                <label for="Address" class="mb-0">Address</label>
                                <input required type="text" class="form-control" name="Customer_Address" id="Address" placeholder="Address"> </div>
                            <div class="form-group col-md-6">
                                <label for="InputEmail1" class="mb-0">Email Address</label>
                                <input required type="email" class="form-control" name="Customer_Email" id="InputEmail1" placeholder="Enter Email"> </div>
                            <div class="form-group col-md-6">
                                <label for="InputPassword1" class="mb-0">Password</label>
                                <input required type="password" class="form-control" name="Customer_Password" id="InputPassword1" placeholder="Password"> </div>
                        </div>
                        <button type="submit" class="btn hvr-hover btn-primary">Register</button>
                    </form>
                </div>
            </div>

        </div>
    </div>
    <!-- End Cart -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="exampleModalLabel">New message</h4>
                </div>
                <div class="modal-body">
                    <form action="\Home\ForgetPassword" method="post" id="myform">
                        <div class="form-group">
                            <label for="recipient-name" class="control-label">Email:</label>
                            <input type="email" name="email" class="form-control" id="email">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="Submit" class="btn btn-primary" form="myform">Send Code</button>
                </div>
            </div>
        </div>
    </div>
  