                    <div class="card-body bg-light p-4">
                        @*<h4 class="card-title text-truncate">@item.A_SubcategoryName</h4>
                        <div class="d-flex mb-3">
                            <small class="mr-2"><h5>Rs.</h5> @item.Pets_SalePrice</small>
                        </div>
                        <p> @item.Pets_Description</p>*@
                        <a class="font-weight-bold" href="">@item.A_SubcategoryName</a>
                    </div>
                </div>
            </div>
        }
       
    </div>

</div>
