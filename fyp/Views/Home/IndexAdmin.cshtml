@using fyp.Utills
@using fyp.Models
@{
    Layout = "~/views/shared/Admin_Layout.cshtml";
    Model1 db = new Model1();
}


<div class="header">
    <h1 class="page-header">
        Dashboard
        @if (CurrentUser.CurrentAdmin != null)
        {
            <small>Welcome @CurrentUser.CurrentAdmin.Admin_Name</small>
        }
    </h1>
    <ol class="breadcrumb">
        <li><a href="#">Home</a></li>
        <li><a href="#">Dashboard</a></li>
        <li class="active">Data</li>
    </ol>

</div>
<div id="page-inner">

    <!-- /. ROW  -->

    <div class="row">

        <div class="col-md-3 col-sm-12 col-xs-12">
            <div class="board">
                <div class="panel panel-primary">
                    <div class="number">
                        <h3>
                            <h3>
                            @db.tblOrders.Where(x => x.Order_Status == "Delivered").Count()
                            </h3>
                            <small>Sales</small>
                        </h3>
                    </div>
                    <div class="icon">
                        <i class="fa fa-shopping-cart fa-5x blue"></i>
                    </div>

                </div>
            </div>
        </div>

        <div class="col-md-3 col-sm-12 col-xs-12">
            <div class="board">
                <div class="panel panel-primary">
                    <div class="number">
                        <h3>
                            <h3>@db.tblFeedbacks.Count()</h3>
                            <small>Comments</small>
                        </h3>
                    </div>
                    <div class="icon">
                        <i class="fa fa-comments fa-5x green"></i>
                    </div>

                </div>
            </div>
        </div>

    </div>
</div>

