@using fyp.Models
@{
    Layout = "~/views/shared/Customer_Layout.cshtml";
    Model1 db = new Model1();
}

<!-- Carousel Start -->
<div class="container-fluid p-0">
    <div id="header-carousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="w-100" src="~/content/customer/img/parot.jpg" alt="Image">
                <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                    <div class="p-3" style="max-width: 900px;">
                        <h3 class="text-white mb-3 d-none d-sm-block">Best Pet Services</h3>
                        <h1 class="display-3 text-white mb-3">Keep Your Pet Happy</h1>
                        <h5 class="text-white mb-3 d-none d-sm-block"> Shop your favorable Pets and also its Accessories online</h5>
                        @foreach (var item in db.tblPetCategories)
                        {
                            <a href="@Url.Action("SubCategory", "Home", new {id=item.Category_ID})" class="btn btn-lg btn-primary mt-3 mt-md-4 px-4">@item.Category_Name</a>
                        }
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img class="w-100" src="~/content/customer/img/carousel-1.jpg" alt="Image">
                <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                    <div class="p-3" style="max-width: 900px;">
                        <h3 class="text-white mb-3 d-none d-sm-block">Best Pet Services</h3>
                        <h1 class="display-3 text-white mb-3">Pet Grooming & Training</h1>
                        <h5 class="text-white mb-3 d-none d-sm-block"> Training videos links availabe at our platform to visit and groom your pet</h5>
                        <a href="@Url.Action("Training","Home")" class="btn btn-lg btn-primary mt-3 mt-md-4 px-4">Pet Training</a>
                    </div>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#header-carousel" data-slide="prev">
            <div class="btn btn-primary rounded" style="width: 45px; height: 45px;">
                <span class="carousel-control-prev-icon mb-n2"></span>
            </div>
        </a>
        <a class="carousel-control-next" href="#header-carousel" data-slide="next">
            <div class="btn btn-primary rounded" style="width: 45px; height: 45px;">
                <span class="carousel-control-next-icon mb-n2"></span>
            </div>
        </a>
    </div>
</div>
<!-- Carousel End -->
<!-- Services Start -->
<div class="container-fluid bg-light pt-5">
    <div class="container py-5">
        <div class="d-flex flex-column text-center mb-5">
            <h1 class="display-4 m-0"><span class="text-primary">Our</span> Services</h1>
        </div>
        <div class="row pb-3">
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="d-flex flex-column text-center bg-white mb-2 p-3 p-sm-5">
                    <h3 class="flaticon-cat display-3 font-weight-normal text-secondary mb-3"></h3>
                    <h3 class="mb-3">Pet Training</h3>
                    <a class="text-uppercase font-weight-bold" href="@Url.Action("Training","Home")">Visit</a>
                </div>
            </div>

            <div class="col-md-6 col-lg-4 mb-4">
                <div class="d-flex flex-column text-center bg-white mb-2 p-3 p-sm-5">
                    <h3 class="flaticon-house display-3 font-weight-normal text-secondary mb-3"></h3>
                    <h3 class="mb-3">Pet Shelter</h3>
                    <a class="text-uppercase font-weight-bold" href="@Url.Action("Shelter","Home")">Visit</a>
                </div>
            </div>

            <div class="col-md-6 col-lg-4 mb-4">
                <div class="d-flex flex-column text-center bg-white mb-2 p-3 p-sm-5">
                    <h3 class="flaticon-vaccine display-3 font-weight-normal text-secondary mb-3"></h3>
                    <h3 class="mb-3">Veterinarian</h3>
                    <a class="text-uppercase font-weight-bold" href="@Url.Action("Vet","Home")">Visit</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Services End -->
<!-- Features Start -->
<div class="container">
    <div class="row align-items-center">
        <div class="col-lg-5">
            <img class="img-fluid w-100" src="~/content/customer/img/feature.jpg" alt="">
        </div>
        <div class="col-lg-7 py-5 py-lg-0 px-3 px-lg-5">
            <h1 class="display-4 mb-4"><span class="text-primary">Special Care</span> On Pets</h1>
            <p class="mb-4"><b>Quest4Pets</b> provides multiple services to users </p>
            <div class="row py-2">
                <div class="col-6">
                    <div class="d-flex align-items-center mb-4">
                        <h1 class="flaticon-cat font-weight-normal text-secondary m-0 mr-3"></h1>
                        <h5 class="text-truncate m-0">Buy Pets & Accessories</h5>
                    </div>
                </div>
                <div class="col-6">
                    <div class="d-flex align-items-center mb-4">
                        <h1 class="flaticon-doctor font-weight-normal text-secondary m-0 mr-3"></h1>
                        <h5 class="text-truncate m-0">Veterinarian Services</h5>
                    </div>
                </div>
                <div class="col-6">
                    <div class="d-flex align-items-center">
                        <h1 class="flaticon-care font-weight-normal text-secondary m-0 mr-3"></h1>
                        <h5 class="text-truncate m-0">Pet Shelter</h5>
                    </div>
                </div>
                <div class="col-6">
                    <div class="d-flex align-items-center">
                        <h1 class="flaticon-dog font-weight-normal text-secondary m-0 mr-3"></h1>
                        <h5 class="text-truncate m-0">Pet Training</h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Features End -->
<!-- Testimonial Start -->
<div class="container-fluid bg-light my-5 p-0 py-5">
    <div class="container p-0 py-5">
        <div class="d-flex flex-column text-center mb-5">
            <h1 class="display-4 m-0">Our Client <span class="text-primary">Says</span></h1>
        </div>
        <div class="owl-carousel testimonial-carousel">
            @foreach (var item in db.tblFeedbacks)
            {
                <div class="bg-white mx-3 p-4">
                    <div class="d-flex align-items-end mb-3 mt-n4 ml-n4">
                        <img class="img-fluid" src="~/content/customer/img/user.png" style="width: 80px; height: 80px;" alt="">
                        <div class="ml-3">
                            <h5>@item.tblCustomer.Customer_Name</h5>
                            <i>@item.Feedback_Date</i>
                        </div>
                    </div>
                    <p class="m-0"><b>@item.Feedback_Description</b></p>
                </div>
            }
        </div>
    </div>
</div>
<!-- Testimonial End -->
